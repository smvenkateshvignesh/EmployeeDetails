<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardOnGoingProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_12dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardImageOnGoingProject"
                android:layout_width="@dimen/_130dp"
                android:layout_height="130dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_12dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ImageOnGoingProject"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_dummy_profile_one" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <com.sample.employeedetails.widgets.MyTextView
                android:id="@+id/txtAppName"
                style="@style/large_text"
                android:layout_width="0dp"
                android:textColor="@color/cardSemiBlack"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="CompIndia App"
                android:padding="@dimen/_5dp"
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginRight="@dimen/_5dp"
                app:layout_constraintEnd_toEndOf="@id/cardImageOnGoingProject"
                app:layout_constraintStart_toStartOf="@id/cardImageOnGoingProject"
                app:layout_constraintTop_toBottomOf="@id/cardImageOnGoingProject" />

            <com.sample.employeedetails.widgets.MyTextView
                android:id="@+id/txtAppSubName"
                style="@style/small_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Android Tech."
                android:padding="@dimen/_5dp"
                android:layout_marginTop="@dimen/_5dp"
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginRight="@dimen/_5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/cardImageOnGoingProject"
                app:layout_constraintStart_toStartOf="@id/cardImageOnGoingProject"
                app:layout_constraintTop_toBottomOf="@id/txtAppName" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>